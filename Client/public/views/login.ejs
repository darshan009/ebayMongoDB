<div class="row">
  <div class="span2">
    <img src="images/ebayLarge.png"  style="margin-top: 70px; margin-left: 600px">
    <p ng-init="signin=true"></p>
  <div>
  <div class="span6 panel-body col-lg-5 center">
    <!-- <h1 align="center">Sign in</h1><br> -->
    <ul class="nav nav-tabs">
      <li class="active"><a ng-click="signin=true; register=false">SignIn</a></li>
      <li><a ng-click="register=true; signin=false">Register</a></li>
    </ul>
    <div class="tab-pane" ng-if="signin" ng-controller="UserController" style="background-color: white; padding: 10px">
      <div class="form-group"  style="margin-top: 20px">
        <form class="form-horizontal" method="POST">
          <input type="email" name="email" ng-model="email" class="form-control" id="email" placeholder="Enter email">
          </br>
          <input type="password" name="password" ng-model="password" class="form-control" id="pwd" placeholder="Enter password">
          <!-- <p id="passwordHelpBlock" class="form-text text-muted">
              Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
          </p> -->
          <div class="checkbox">
            <label><input type="checkbox"> Remember me</label>
          </div>
          <button type="submit" class="btn btn-primary btn-block" ng-click = login()>Sign in</button>
        </form>
        </br>
        <p align="center">
          Dont have an account? Register above
          to get started.
        </p>
      </div>
    </div>
    <div class="tab-pane" ng-if="register" ng-controller="UserController" style="background-color: white; padding: 10px">
      <div class="form-group" style="margin-top: 20px">
        <form class="form-horizontal" method="POST">
          <input type="text" name="name" ng-model="firstName" class="form-control" id="name" placeholder="Enter your First Name">
          </br>
          <input type="text" name="name" ng-model="lastName" class="form-control" id="name" placeholder="Enter your Last Name">
          </br>
          <input type="email" name="email" ng-model="email" class="form-control" id="email" placeholder="Enter your email">
          </br>
          <input type="text" name="username" ng-model="username" class="form-control" id="pwd" placeholder="Choose a user name">
          </br>
          <input type="password" name="password" ng-model="password" class="form-control" id="pwd" placeholder="Choose password">
          </br>
          <input type="text" name="birthday" ng-model="birthday" class="form-control" id="pwd" placeholder="Birthday: MM/DD/YYYY">
          </br>
          <input type="Number" name="contactNo" ng-model="contactNo" class="form-control" id="pwd" placeholder="Enter your contact number">
          </br>
          <input type="String" name="address" ng-model="address" class="form-control" id="pwd" placeholder="Enter your location">
          </br>
          <button type="submit" class="btn btn-primary btn-block" ng-click = signup()>Register</button>
        </br>
        </form>
        <p align="center">
          Already have an account? Log-In above
          to get started.
        </p>
      </div>
    </div>
  </div>
  <!-- <h1 ng-if="signin">signin</h1><h1 ng-if="register">register</h1> -->
</div>
